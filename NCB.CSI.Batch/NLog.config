<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Error" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="Layout" value="${longdate}&#9;${level:uppercase=true}&#9;${message}${exception:format=toString}"/>
  <variable name="LayoutFatal" value="${longdate} | ${level:uppercase=true} | ${logger} | ${message} | ${exception:format=tostring} ${newline}"/>

  <variable name="LogTxtDir" value="${basedir}/Logs/"/>
  <variable name="LogTxtLocation" value="${LogTxtDir}/${gdc:item=LogFileName}_${date:format=yyyyMMdd}.log"/>
  <variable name="LogTxtLocationFatal" value="${LogTxtDir}/${date:format=yyyyMMdd}FatalFile.log"/>

  <targets async="false">
    <target name="File" xsi:type="File" fileName="${LogTxtLocation}" layout="${Layout}" keepFileOpen="false"
               encoding="utf-8"
               archiveFileName="${LogTxtDir}/${logger}-{####}.log" archiveEvery="Day" archiveNumbering="Date" maxArchiveFiles="30" />
  </targets>
  <rules>
    <logger name="*" levels="Trace,Debug,Info,Warn,Error,Fatal" writeTo="File" />
  </rules>
</nlog>